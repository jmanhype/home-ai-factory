# AI Factory Environment Variables
# Copy this to .env and fill in your keys

# =============================================
# SUBSCRIPTION INTEGRATION
# =============================================

# Claude Max Subscription ($100/mo - Unlimited Opus 4.5)
# Used via Letta proxy for Claude Code with persistent memory
# Your subscription handles the inference cost - no per-token charges!
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key

# GPT Pro Subscription ($200/mo - Unlimited GPT-4o, o1)
# Used via LiteLLM proxy for OpenAI model access
# Your subscription handles the inference cost - no per-token charges!
OPENAI_API_KEY=sk-your-openai-key

# =============================================
# OPTIONAL SERVICES
# =============================================

# Letta Cloud (optional - for managed memory sync)
LETTA_API_KEY=your-letta-api-key

# HuggingFace (optional - for private model access)
HF_TOKEN=hf_your_token

# =============================================
# DATABASE (auto-configured, change only if needed)
# =============================================
POSTGRES_USER=vectorgraph
POSTGRES_PASSWORD=vectorgraph_secret
POSTGRES_DB=ai_factory

# =============================================
# MODELS (customize as needed)
# =============================================

# Local embedding model (runs on your GPU)
EMBEDDING_MODEL=BAAI/bge-base-en-v1.5

# LiteLLM master key (change for security)
LITELLM_MASTER_KEY=sk-ai-factory-master-key

# =============================================
# NETWORK (for WireGuard mesh)
# =============================================
GPU_SERVER_IP=10.0.0.3
MACBOOK_IP=10.0.0.4
